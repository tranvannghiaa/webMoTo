@model IEnumerable<webMoTo.Models.MoTo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-default">
                <div class="panel panel-heading">
                    @item.Name
                </div>
                <div class="panel-body">
                    <p><strong>Giá:  </strong>@item.Gia vnđ</p>
                    <p><strong>Ngày cập nhật:  </strong>@item.NgayDangKy</p>
                    <p><strong>Số lượng tồn:  </strong>@item.SLT</p>
                    <p><strong> Dung tích xi lanh: </strong>@item.DTXiLanh cm³</p>
                    <p><strong>Năm Sản Xuất: </strong>@item.NSX</p>
                    <p><img src="@item.Hinh" alt="hinh thumnail" height="150"width="200"></p>
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        <a href="#" class="btn btn-primary">Đặt Mua</a>
                        @Html.ActionLink("Chi tiết...", "Detail", new
                        {
                            id =
                        item.Id
                        }, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
       
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        
    }


